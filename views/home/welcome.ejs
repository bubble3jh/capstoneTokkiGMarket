     }

     #main_header > #title2 {
       font-family: 'Nanum Gothic', sans-serif;
       text-align: center;

       color: #717171;
       position: absolute;
       left: 800px;
       top: 230px;
     }

     #main_header > #search {
       width: 350px;
       position: absolute;
