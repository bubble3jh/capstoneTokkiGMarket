     }

     select {
         font-family: 'Nanum Gothic Coding', monospace;
         border: none;
         outline: #C2C2C2;
         width: 150px;
         height: 50px;
         font-size: 30px;
         background: #FFEEDB;
         color: #9E9E9E;
         text-align: center;
